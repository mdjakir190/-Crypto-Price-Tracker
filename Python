gytt66ttff5fyyftttimport requests
import pandas as pd

def fetch_crypto_data():
    url = "https://api.coingecko.com/api/v3/coins/markets"
    params = {
        'vs_currency': 'usd',
        'order': 'market_cap_desc',
        'per_page': 10,
        'page': 1,
        'sparkline': 'false'
    }
    
    print("Fetching real-time crypto data...")
    response = requests.get(url, params=params)
    
    if response.status_code == 200:
        data = response.json()
        # Filtering important columns
        df = pd.DataFrame(data)[['name', 'symbol', 'current_price', 'market_cap', 'price_change_percentage_24h']]
        print("\n--- Top 10 Cryptocurrencies ---")
        print(df.to_string(index=False))
    else:
        print("Error fetching data. Please check your connection.")

if __name__ == "__main__":
    fetch_crypto_data()
